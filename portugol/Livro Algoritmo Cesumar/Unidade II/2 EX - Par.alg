algoritmo "Par"
// Função :
// Autor :
// Data : 07/07/2019
// Seção de Declarações 
var
   n, resto: inteiro
   metade: real
inicio
      Escreva ("Digite um número.: ")
      Leia (n)
      resto <- n mod 2
      Se (resto = 0) Entao
      metade <- n / 2
         Escreva ("A metade do número", metade)
      Fimse
Fimalgoritmo
